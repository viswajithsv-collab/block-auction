        // ============================================
        // STATE
        // ============================================

        let allBids = {};
        let timeRemaining = AUCTION_DURATION;
        let timerInterval = null;
        let pollInterval = null;
        let isFrozen = false;

        // ============================================
        // INITIALIZATION
        // ============================================

        function init() {
            renderItemsBySet();
            startPolling();
        }

        // ============================================
        // TABS
        // ============================================

        function showTab(tabName) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
            
            document.querySelector(`[onclick="showTab('${tabName}')"]`).classList.add('active');
            document.getElementById(`tab-${tabName}`).classList.add('active');
        }

        // ============================================
        // TIMER CONTROLS
        // ============================================

        function startAuction() {
            if (timerInterval) return;
            
            timerInterval = setInterval(() => {
                if (timeRemaining <= 0) {
                    freezeAuction();
                    return;
                }
                timeRemaining--;
                updateTimerDisplay();
            }, 1000);
        }

        function freezeAuction() {
            isFrozen = true;
            clearInterval(timerInterval);
            timerInterval = null;
            document.getElementById('timer').textContent = 'FROZEN';
            document.getElementById('timer').classList.add('warning');
            
            // Show winners tab
            showTab('winners');
            renderWinners();
        }

        function resetAuction() {
            if (!confirm('Reset the auction? This will clear all bids.')) return;
            
            clearInterval(timerInterval);
            timerInterval = null;
            timeRemaining = AUCTION_DURATION;
            isFrozen = false;
            allBids = {};
            
            updateTimerDisplay();
            document.getElementById('timer').classList.remove('warning');
            updateAllDisplays();
        }

        function updateTimerDisplay() {
            const minutes = Math.floor(timeRemaining / 60);
            const seconds = timeRemaining % 60;
            document.getElementById('timer').textContent = 
                `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            if (timeRemaining < 120) {
                document.getElementById('timer').classList.add('warning');
            }
        }

        // ============================================
        // DATA FETCHING
        // ============================================

        async function fetchAllBids() {
            try {
                const response = await fetch(`${API_URL}?action=getAllBids`);
                const data = await response.json();
                allBids = data.bids || {};
                updateAllDisplays();
            } catch (error) {
                console.error('Error fetching bids:', error);
                // Demo mode - generate fake data
                generateDemoData();
                updateAllDisplays();
            }
        }

        function startPolling() {
            fetchAllBids();
            pollInterval = setInterval(fetchAllBids, 2000);
        }

        function generateDemoData() {
            // Demo data for testing without backend
            const teams = ['Team Alpha', 'Team Beta', 'Team Gamma', 'Team Delta', 'Team Epsilon'];
            const items = [];
            AUCTION_SETS.forEach(set => set.items.forEach(item => items.push(item.id)));
            
            items.forEach(itemId => {
                allBids[itemId] = {};
                teams.forEach(team => {
                    if (Math.random() > 0.5) {
                        allBids[itemId][team] = Math.floor(Math.random() * 20);
                    }
                });
            });
        }

        // ============================================
        // DISPLAY UPDATES
        // ============================================

        function updateAllDisplays() {
            renderMostWanted();
            renderLeastWanted();
            renderTeamGrid();
            renderItemsBySet();
            renderBiddingWars();
        }

        function renderMostWanted() {
            const container = document.getElementById('mostWanted');
            const itemTotals = getItemTotals();
            const sorted = itemTotals.sort((a, b) => b.total - a.total).slice(0, 10);
            const maxTotal = sorted[0]?.total || 1;

            container.innerHTML = sorted.map((item, index) => `
                <div class="wanted-item">
                    <div class="rank">#${index + 1}</div>
                    <div class="info">
                        <div class="name">${item.name}</div>
                        <div class="teams">${item.bidCount} teams bidding</div>
                        <div class="bar"><div class="bar-fill" style="width: ${(item.total / maxTotal) * 100}%"></div></div>
                    </div>
                    <div class="total">${item.total}</div>
                </div>
            `).join('');
        }

        function renderLeastWanted() {
            const container = document.getElementById('leastWanted');
            const itemTotals = getItemTotals();
            const sorted = itemTotals.sort((a, b) => a.total - b.total).slice(0, 10);
            const maxTotal = Math.max(...itemTotals.map(i => i.total)) || 1;

            container.innerHTML = sorted.map((item, index) => `
                <div class="wanted-item">
                    <div class="rank">#${index + 1}</div>
                    <div class="info">
                        <div class="name">${item.name}</div>
                        <div class="teams">${item.bidCount} teams bidding</div>
                        <div class="bar"><div class="bar-fill" style="width: ${(item.total / maxTotal) * 100}%"></div></div>
                    </div>
                    <div class="total">${item.total}</div>
                </div>
            `).join('');
        }

        function getItemTotals() {
            const totals = [];
            AUCTION_SETS.forEach(set => {
                set.items.forEach(item => {
                    const bids = allBids[item.id] || {};
                    const total = Object.values(bids).reduce((sum, bid) => sum + bid, 0);
                    const bidCount = Object.values(bids).filter(b => b > 0).length;
                    totals.push({ id: item.id, name: item.name, total, bidCount });
                });
            });
            return totals;
        }

        function renderTeamGrid() {
            const container = document.getElementById('teamGrid');
            const teamData = getTeamData();

            container.innerHTML = Object.entries(teamData).map(([team, data]) => `
                <div class="team-card">
                    <h3>${team}</h3>
                    <div class="stat">
                        <span class="label">Total Allocated:</span>
                        <span>${data.totalSpent}</span>
                    </div>
                    <div class="stat">
                        <span class="label">Items Bid On:</span>
                        <span>${data.itemCount}</span>
                    </div>
                    <div class="stat">
                        <span class="label">Currently Winning:</span>
                        <span>${data.winning}</span>
                    </div>
                    <div class="top-bids">
                        <strong>Top bids:</strong>
                        ${data.topBids.map(b => `<div>${b.name}: ${b.amount}</div>`).join('')}
                    </div>
                </div>
            `).join('');
        }

        function getTeamData() {
            const teams = {};
            
            // Collect all team bids
            Object.entries(allBids).forEach(([itemId, bids]) => {
                Object.entries(bids).forEach(([team, amount]) => {
                    if (!teams[team]) {
                        teams[team] = { totalSpent: 0, itemCount: 0, bids: [], winning: 0 };
                    }
                    if (amount > 0) {
                        teams[team].totalSpent += amount;
                        teams[team].itemCount++;
                        const itemName = getItemName(itemId);
                        teams[team].bids.push({ id: itemId, name: itemName, amount });
                    }
                });
            });

            // Calculate winning items
            Object.entries(allBids).forEach(([itemId, bids]) => {
                const winner = getWinner(itemId);
                if (winner && teams[winner]) {
                    teams[winner].winning++;
                }
            });

            // Get top 3 bids per team
            Object.keys(teams).forEach(team => {
                teams[team].topBids = teams[team].bids
                    .sort((a, b) => b.amount - a.amount)
                    .slice(0, 3);
            });

            return teams;
        }

        function getItemName(itemId) {
            for (const set of AUCTION_SETS) {
                for (const item of set.items) {
                    if (item.id === itemId) return item.name;
                }
            }
            return itemId;
        }

        function getWinner(itemId) {
            const bids = allBids[itemId] || {};
            let maxBid = 0;
            let winner = null;
            Object.entries(bids).forEach(([team, amount]) => {
                if (amount > maxBid) {
                    maxBid = amount;
                    winner = team;
                }
            });
            return winner;
        }

        function renderItemsBySet() {
            const container = document.getElementById('itemsBySet');
            
            container.innerHTML = AUCTION_SETS.map(set => `
                <div class="set-summary">
                    <h3>${set.name}</h3>
                    <div class="set-items-grid">
                        ${set.items.map(item => {
                            const bids = allBids[item.id] || {};
                            const highBid = Math.max(...Object.values(bids), 0);
                            const leader = getWinner(item.id) || '-';
                            return `
                                <div class="set-item">
                                    <div class="item-name">${item.name}</div>
                                    <div class="high-bid">${highBid}</div>
                                    <div class="leader">${leader}</div>
                                </div>
                            `;
                        }).join('')}
                    </div>
                </div>
            `).join('');
        }

        function renderBiddingWars() {
            const container = document.getElementById('biddingWars');
            const wars = [];

            Object.entries(allBids).forEach(([itemId, bids]) => {
                const bidValues = Object.entries(bids).filter(([t, b]) => b > 0);
                if (bidValues.length >= 2) {
                    const sorted = bidValues.sort((a, b) => b[1] - a[1]);
                    const diff = sorted[0][1] - sorted[1][1];
                    if (diff <= 5) { // Close race
                        wars.push({
                            id: itemId,
                            name: getItemName(itemId),
                            leader: sorted[0][0],
                            leaderBid: sorted[0][1],
                            challenger: sorted[1][0],
                            challengerBid: sorted[1][1]
                        });
                    }
                }
            });

            container.innerHTML = wars.length > 0 ? wars.map(war => `
                <div class="wanted-item">
                    <div class="info">
                        <div class="name">${war.name}</div>
                        <div class="teams">
                            <span style="color:#4ecca3">${war.leader}: ${war.leaderBid}</span> vs 
                            <span style="color:#e94560">${war.challenger}: ${war.challengerBid}</span>
                        </div>
                    </div>
                </div>
            `).join('') : '<p style="color:#666">No close races yet...</p>';
        }

        function renderWinners() {
            const container = document.getElementById('winnersGrid');
            
            container.innerHTML = AUCTION_SETS.map(set => `
                <div class="winner-card">
                    <h4>${set.name}</h4>
                    ${set.items.map(item => {
                        const winner = getWinner(item.id);
                        const bids = allBids[item.id] || {};
                        const winningBid = winner ? bids[winner] : 0;
                        return `
                            <div style="margin: 8px 0; padding: 8px; background: rgba(0,0,0,0.3); border-radius: 5px;">
                                <div style="color:#888">${item.name}</div>
                                <div class="winner-team">${winner || 'No bids'}</div>
                                ${winner ? `<div class="winning-bid">${winningBid} points</div>` : ''}
                            </div>
                        `;
                    }).join('')}
                </div>
            `).join('');
        }

        // ============================================
        // UTILITIES
        // ============================================

        function toggleFullscreen() {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen();
            } else {
                document.exitFullscreen();
            }
        }

        // Initialize
        init();
    </script>
</body>
</html>
